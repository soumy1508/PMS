@model List<PMS.Models.Project>
<h1>@ViewBag.Title</h1>



<p><a asp-controller="Project" asp-action="Add">Create Project</a></p>

<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Budget</th>
    </tr>

    @foreach (var project in Model)
    {
        <tr>
            <td>@project.Name</td>
            <td>@project.Description</td>
            <td>@project.StartDate</td>
            <td>@project.EndDate</td>
            <td>@project.Budget</td>
          
            
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No projects yet!</p>
}

<p><a asp-controller="Project" asp-action="Edit">Edit Project</a></p>
<a asp-controller="Project" asp-action="Delete">Delete Project</a>